{
    "key": "JiraToGIT",
    "name": "Jira To GIT",
    "description": "Connect jira to git",
    "baseUrl": "{{localBaseUrl}}",
    "authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        "installed": "/installed"
    },
    "scopes": [
        "ADMIN",
        "READ",
        "WRITE"
    ],
    "apiMigrations":{
        "signed-install": true
    },
    "modules": {
        "generalPages": [
            {
                "key": "hello-world-page-jira",
                "location": "system.top.navigation.bar",
                "name": {
                    "value": "Hello World"
                },
                "url": "/hello-world",
                "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
        ],
        "jiraIssueGlances": [
            {
              "icon": {
                "width": 0,
                "height": 0,
                "url": "my_icon.svg"
              },
              "content": {
                "type": "label",
                "label": {
                  "value": "Git info"
                }
              },
              "target": {
                "type": "web_panel",
                "url": "/GitInfo?issuetype={issuetype.id}"
              },
              "jiraNativeAppsEnabled": false,
              "name": {
                "value": "Git Info "
              },
              "key": "GitInfo"
            }
          ],
          "webItems": [

              {
        
                "location": "jira.issue.tools",
        
                "weight": 0,
        
                "styleClasses": [
        
                  "webitem",
        
                  "system-present-webitem"
        
                ],
        
                "url": "/Git-WebItem?issueid={issue.key}&issuetype={issuetype.id}",
        
                "context": "addon",
        
                "target": {

                  "type": "dialog",
              
                  "options": {
              
                    "height": "0px",
              
                    "width": "0px"
              
                  }
                 } ,
        
                "tooltip": {
        
                  "value": "Example tooltip"
        
                },
        
                "icon": {
        
                  "width": 0,
        
                  "height": 0,
        
                  "url": "/maps/icon.png"
        
                },
        
                "name": {
        
                  "value": "Synchronisation GIT"
        
                },
        
                "key": "web-item-Git"
        
              }
        
            ]

      
    }
}
